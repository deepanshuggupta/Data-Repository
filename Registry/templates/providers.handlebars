{{!-- The template for showing all quizzes --}}
<style>
	#divProvidersTemplate span.glyphicon{
		margin-right: 5px;
		cursor: pointer;
	}

	#divProvidersTemplate span.glyphicon.glyphicon-plus{
		margin-right: 0px;
		padding-left: 2px;
		padding-bottom: 2px;

		font-size: 35px;
		position: fixed;
		right: 1%;
		top: 17%;

		border: 1px solid black;

		color: white;
		background-color: black;
	}
</style>
<div id="divProvidersTemplate">
	<div id="divProviderModal" class="modal fade" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
		    <div class="modal-content">
		        <div class="modal-header">
		            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		            <h4 id="titleProviderModal" class="modal-title">Save Provider</h4>
		            <input id="hdnProviderIdModal" type="hidden" value="" />
		        </div>
		        <div class="modal-body">
					<form class="form-horizontal">
					    <div class="form-group">
					        <label for="txtName" class="col-sm-2 control-label">Name</label>
					        <div class="col-sm-10">
					            <textarea type="text" class="form-control" id="txtName" placeholder="Enter the name here"></textarea>
					        </div>
					    </div>
					    <div class="form-group">
					        <label for="txtDescription" class="col-sm-2 control-label">Description</label>
					        <div class="col-sm-10">
					            <textarea type="text" class="form-control" id="txtDescription" placeholder="Enter the description here"></textarea>
					        </div>
					    </div>
						<div class="form-group">
					        <label for="txtLink" class="col-sm-2 control-label">Link</label>
					        <div class="col-sm-10">
					            <input type="text" class="form-control" id="txtLink" placeholder="Enter the link here"></input>
					        </div>
					    </div>
					</form>
		        </div>
		        <div class="modal-footer">
		            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		            <button id="btnSaveProvider" type="button" class="btn btn-primary">Save</button>
		        </div>
		    </div>
		    <!-- /.modal-content -->
		</div>
		<!-- /.modal-dialog -->
	</div>
	<!-- /.modal -->

	<p class="row">
		<span class="glyphicon glyphicon-plus" action="create"></span>
	</p>
	<table class="table table-bordered table-dark">
  <thead>
    <tr>
      <th scope="col">Provider Name</th>
      <th scope="col">Description</th>
      <th scope="col">Link</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each .}}
	<tr provider-id={{id}}>
      <td purpose="name">{{name}}</td>
      <td purpose="desc">{{desc}}</td>
      <td purpose="link">{{link}}</td>
	  <td><span class="glyphicon glyphicon-pencil pull-right" action="edit"></span>
	  <span class="glyphicon glyphicon-trash pull-right" action="delete"></span></td>
    </tr>
	{{/each}}


  </tbody>
</table>
</div>


